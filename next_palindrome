#include <stdio.h>

int main()
{
    int n,temp,rem,rev=0;
    scanf("%d",&n);
    n++;
    while(rev!=n)
    {
        temp=n;
        while(temp>0)
        {
            rem=temp%10;
            rev=(rev*10)+rem;
            temp/=10;   
        }
        if(rev==n)
        {
            printf("%d",n);
            break;
        }
        else
        {
            n++;
        }
    }
    
}
